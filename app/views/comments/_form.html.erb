<div class="tab-pane" id="add-comment">
  <%= form_for [@product, @comment], remote: true do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="form-group">
      <%= f.label :content, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :content, class: "form-control", id: "content-form" %>
        <%= f.hidden_field :reply_to, value: @reply_to %>
        <%= f.hidden_field :product_id, value: @product.id %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit t(".submit"), class: "btn btn-success btn-circle text-uppercase", id: "submitComment" %>
      </div>
    </div>
  <% end %>
</div>